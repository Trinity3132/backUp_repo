
#!/bin/sh

hour=$(date '+%I')

# Clock emoji based on hour
case "$hour" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "ğŸ—“ Calendar" "$(cal | sed "s/\<$(date +'%e'|tr -d ' ')\>/<b><span color='red'>&<\/span><\/b>/")" \
	   && notify-send "ğŸ“Œ Appointments" "$(calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "ğŸ“… Clock Module" "\
ğŸ–± Left: calendar + calcurse preview
ğŸ–± Middle: open calcurse
ğŸ–± Right: show this help" ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# îª°  MM/DD/YYYY | ğŸ•“ HH:MM AM/PM
printf "| %s | %s%s\n" "$(date '+%m/%d/%Y')"  "$(date '+%I:%M %p') | "

