#!/bin/sh

# Check if PulseAudio/PipeWire is running
if ! pactl info >/dev/null 2>&1; then
    echo "| 胄릝 "
    exit
fi

# Get mute status
MUTED=$(pactl get-sink-mute @DEFAULT_SINK@ | awk '{print $2}')

# Get volume (last % value from pactl output)
VOL=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -o '[0-9]\{1,3\}%' | tail -n1 | tr -d '%')

# Choose icon
if [ "$MUTED" = "yes" ]; then
    echo "| 胄두 "
    exit
fi

if   [ "$VOL" -ge 90 ]; then icon="胄 "
elif [ "$VOL" -ge 70 ]; then icon="胄 "
elif [ "$VOL" -ge 40 ]; then icon="胄 "
elif [ "$VOL" -ge 1  ]; then icon="胄 "
else icon="胄 "
fi

# Print to dwmblocks
echo "| $icon - $VOL%"


